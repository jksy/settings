[ghq]
  root = ~/src
[user]
	name = Junichiro Kasuya
	email = junichiro.kasuya@gmail.com
[alias]
  st = status
  di = diff
  ci = commit
  co = checkout
  ad = add
  stt = status -uno
  difff = diff -w
  br = branch
  tree = log --graph --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
  logg = log --graph
	d = difftool
[push]
	default = matching
[color]
	ui = true
[credential]
	helper = cache --timeout=43200
[core]
	quotepath = false
	editor = vim -c \"set fenc=utf-8\"
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
